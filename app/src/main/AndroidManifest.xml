<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 日程提醒功能所需权限 -->
    <!-- 监听设备重启 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 设置闹钟 -->
    <uses-permission android:name="android.permission.SET_ALARM" />
    <!-- Android 12+ 精确闹钟权限 -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <!-- 振动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- Android 13+ 通知权限 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CalendarApplication"
        tools:targetApi="31">
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity" android:exported="false" />
        <activity android:name=".ui.ViewActivity" android:exported="false" />
        <activity android:name=".ui.MyActivity" android:exported="false" />
        <activity android:name=".ui.BasicInfoActivity" android:exported="false" />
        <activity android:name=".ui.ChangePhoneActivity" android:exported="false" />
        <activity android:name=".ui.EditScheduleActivity" android:exported="false" />
        <activity android:name=".ui.ChangePasswordActivity" android:exported="false" />
        <activity android:name=".ui.AddScheduleActivity" android:exported="false" />
        <activity android:name=".ui.MyScheduleActivity" android:exported="false" />
        <activity android:name=".ui.PushNotificationActivity" android:exported="false" />
        <activity android:name=".ui.SearchActivity" android:exported="false" />

        <!-- 注册广播接收器 -->
        <!-- 闹钟广播接收器 -->
        <receiver
            android:name=".receiver.AlarmReceiver"
            android:exported="false">
        </receiver>
        <!-- 设备重启广播接收器 -->
        <receiver
            android:name=".receiver.BootCompletedReceiver"
            android:exported="false"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>