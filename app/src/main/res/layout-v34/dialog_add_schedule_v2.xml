<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="1dp">

    <!-- 标题输入 -->
    <EditText
        android:id="@+id/et_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="记些重要的事情吧~"
        android:lines="1"
        android:padding="16dp"
        android:textSize="16sp" />

    <!-- 备注输入 -->
    <EditText
        android:id="@+id/et_dialog_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="输入备忘"
        android:lines="2"
        android:padding="16dp"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="14sp" />

    <!-- 功能按钮栏（底部分割线+按钮） -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/system_on_background_dark" />

    <!-- 功能按钮栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_orange_light"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="时间"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_priority"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_light"
            android:drawablePadding="4dp"
            android:text="象限"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_remind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_purple"
            android:drawablePadding="4dp"
            android:text="提醒"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_repeat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_green_light"
            android:drawableStart="@drawable/ic_repeat"
            android:drawablePadding="4dp"
            android:text="重复"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:drawablePadding="4dp"
            android:text="确定"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>