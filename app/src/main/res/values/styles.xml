<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 输入框样式 -->
    <style name="LoginInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- 登录按钮样式 -->
    <style name="LoginButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>