<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!--顶部栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/today_calendar_size_title"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/iv_dropdown"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:contentDescription="下拉"
            android:src="@drawable/ic_dropdown"
            android:layout_toEndOf="@id/tv_date"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_add"
            android:contentDescription="添加"
            android:background="@drawable/shape_circle_orange"
            android:padding="6dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!--周/月视图切换区域-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <!--星期标题-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="一"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="二"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="三"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="四"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="五"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="六"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!--周视图日期按钮-->
        <LinearLayout
            android:id="@+id/ll_week_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <!-- 动态添加-->
        </LinearLayout>

        <!--月视图，默认隐藏-->
        <GridView
            android:id="@+id/gv_month_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="7"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"
            android:padding="8dp"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false"/>

        <!--切换到月视图的按钮-->
        <ImageView
            android:id="@+id/iv_change_view"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_collapse_less"
            android:contentDescription="切换视图"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"/>

    </LinearLayout>

    <!--内容区域（只保留四象限）-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <!--四象限视图，默认显示-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fillViewport="true">
            <LinearLayout
                android:id="@+id/ll_quadrant_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:visibility="visible"/>
        </ScrollView>
    </FrameLayout>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <LinearLayout
            android:id="@+id/ll_nav_schedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_nav_schedule"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_schedule_selected"
                android:contentDescription="日程"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日程"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_orange_light"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_nav_view"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_view_unselected"
                android:contentDescription="视图"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视图"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_nav_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_nav_mine"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_mine_unselected"
                android:contentDescription="我的"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>